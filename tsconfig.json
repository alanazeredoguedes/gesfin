{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "jsx": "preserve",
        "jsxImportSource": "vue",
        "module": "ESNext",
        "moduleResolution": "bundler",
        //"baseUrl": ".",
        "paths": {
            "@/*": ["./resources/js/*"],
            "@admin/*": ["./resources/admin/js/*"],
            "@client/*": ["./resources/client/js/*"],
            "@public/*": ["./resources/public/js/*"],
            "ziggy-js": ["./vendor/tightenco/ziggy"]
        },
        "types": [
            "vite/client",
            "./resources/admin/js",
            "./resources/client/js",
            "./resources/public/js",
            "./vendor/tightenco/ziggy/src/js/index.d.ts",
            "node"
        ],
        "resolveJsonModule": true,
        "allowJs": true,
        "sourceMap": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.d.ts",
        "resources/js/**/*.vue",


        "resources/**/*.ts",
        "resources/**/*.d.ts",
        "resources/**/*.vue"
    ]
}
